<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".schedule.CityBus2">

    <TextView
        android:id="@+id/busScheduleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/getBusScheduleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Bus Schedule"
        android:layout_below="@id/busScheduleTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/intervalTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Interval: N/A"
        android:layout_below="@id/getBusScheduleButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>
    <ListView
        android:id="@+id/infoListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/intervalTextView"
        android:layout_marginTop="16dp"/>

</RelativeLayout>