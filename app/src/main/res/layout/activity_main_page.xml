<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.example.moija.MainPage">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/startEditText"
                    android:layout_marginLeft="20dp"
                    android:layout_width="330dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/edittext_rectangle"
                    android:hint="출발 장소 입력"
                    android:imeOptions="actionSearch"
                    android:paddingStart="15dp"
                    android:textColor="@color/black"
                    android:textColorHint="#BDBDBD" />

                <ImageButton
                    android:id="@+id/mylocbtn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@android:color/transparent"
                    android:padding="0sp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="15dp"
                    android:layout_toLeftOf="@+id/startEditText"
                    android:layout_alignParentRight="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/mylocation" />

            <EditText
                android:layout_marginTop="10dp"
                android:id="@+id/goalEditText"
                android:layout_below="@+id/startEditText"
                android:layout_marginLeft="20dp"
                android:hint="도착 장소 입력"
                android:paddingStart="15dp"
                android:textColorHint="#BDBDBD"
                android:imeOptions="actionSearch"
                android:layout_gravity="center"
                android:background="@drawable/edittext_rectangle"
                android:layout_width="330dp"
                android:textColor="@color/black"
                android:layout_height="50dp" />
            </RelativeLayout>
    </LinearLayout>
    <ImageButton
        android:id="@+id/dataclear"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@android:color/transparent"
        android:padding="0sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_alignParentRight="true"
        android:scaleType="centerCrop"
        android:src="@drawable/trashbin" />
    <FrameLayout
        android:layout_marginTop="10dp"
        android:id="@+id/Mapframe"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ListView
        android:layout_marginTop="20dp"
        android:id="@+id/resultListView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:dividerHeight="1dp"
        android:visibility="gone"
        android:divider="@android:drawable/divider_horizontal_bright"/>
    <ListView
        android:layout_marginTop="20dp"
        android:id="@+id/searchPathListView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:dividerHeight="1dp"
        android:visibility="gone"
        android:divider="@android:drawable/divider_horizontal_bright"/>

    <ListView
        android:id="@+id/recordPlaceList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:divider="@android:drawable/divider_horizontal_bright"
        android:visibility="visible" />


</LinearLayout>