<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#92B2E3"/>
    <Button
        android:id="@+id/getScheduleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="10dp"
        android:text="시간표"
        />
    <ImageView
        android:layout_width="50dp"
        android:layout_height="29dp"
        android:layout_gravity="center"
        android:layout_marginLeft="175dp"
        android:layout_marginTop="15dp"
        android:contentDescription="Title Image"
        android:src="@drawable/bus" />


    <!-- 뒤로가기 버튼 -->
    <ImageButton
        style="@style/TransparentButtonStyle"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="10dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_gravity="center"
        android:src="@drawable/arrow3" />

    <LinearLayout
        android:id="@+id/busLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:orientation="horizontal">
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/busLayout"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="136dp"
            android:layout_height="175dp"
            android:layout_marginTop="70dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/myImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:scaleType="fitCenter"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/buss" />

            </LinearLayout>

            <TextView
                android:id="@+id/startStationTextView"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_below="@id/myImage"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dp"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="20dp"
                android:text="출발지"
                android:textColor="@color/black" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="136dp"
            android:layout_height="175dp"
            android:layout_marginTop="70dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="65dp"
                android:text="➔"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="65dp"
                android:textSize="23dp"
                android:text="시외버스"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="65dp"
                android:layout_marginLeft="5dp"
                android:textSize="20dp"
                android:text="➔"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="136dp"
            android:layout_height="175dp"
            android:layout_marginTop="70dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/myImage2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:scaleType="fitCenter"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/buss" />

            </LinearLayout>
            <TextView
                android:id="@+id/destStationTextView"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/myImage2"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:text="도착지"/>

        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/busScheduleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="버스일정"
            android:textAlignment="center"
            android:textSize="40dp" />

    </ScrollView>

</RelativeLayout>